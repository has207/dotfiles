[user]
  name = Herman Sheremetyev
  email = herman@swebpage.com

[color]
  ui = auto

[alias]
  br = branch
  ca = commit -a
  co = checkout
  cw = !git stash && git checkout work
  di = diff --patience
  dc = diff --patience --cached
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  nb = !git cw && git checkout -b
  sl = stash list
  sp = stash pop
  st = status

[commit]
  template = ~/.gitcommit.template
